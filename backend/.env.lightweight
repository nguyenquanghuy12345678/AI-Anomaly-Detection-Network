# Lightweight Configuration - Minimal Resource Usage
# Copy this to .env for lightweight setup: cp .env.lightweight .env

# Flask
FLASK_ENV=development
SECRET_KEY=dev-secret-key-please-change-in-production
API_PORT=5000

# Database - SQLite (no PostgreSQL needed!)
DATABASE_URL=sqlite:///instance/anomaly.db

# Cache - In-memory (no Redis needed!)
REDIS_URL=memory://
CACHE_TYPE=simple

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost

# Features - Disable heavy services
ENABLE_ZABBIX=false
ENABLE_ML_TRAINING=false
ENABLE_NETWORK_CAPTURE=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance - Minimal settings
MAX_CONTENT_LENGTH=10485760
SQLALCHEMY_POOL_SIZE=5
SQLALCHEMY_MAX_OVERFLOW=10

# Background Tasks - Reduced frequency
MONITORING_INTERVAL=60
ANOMALY_CHECK_INTERVAL=30
