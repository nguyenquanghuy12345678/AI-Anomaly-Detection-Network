# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
API_PORT=5000

# Database Configuration
DATABASE_URL=postgresql://anomaly_user:anomaly_pass@localhost:5432/anomaly_detection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=anomaly_detection
DB_USER=anomaly_user
DB_PASSWORD=anomaly_pass

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Zabbix Configuration
ZABBIX_SERVER=http://localhost:8080
ZABBIX_USER=Admin
ZABBIX_PASSWORD=zabbix
ZABBIX_API_URL=http://localhost:8080/api_jsonrpc.php

# AI/ML Configuration
MODEL_PATH=./models
MODEL_VERSION=1.0.0
PREDICTION_THRESHOLD=0.7
RETRAIN_INTERVAL=86400

# Network Monitoring
INTERFACE=eth0
PACKET_CAPTURE_ENABLED=true
TRAFFIC_WINDOW=300

# GeoIP Configuration
GEOIP_DB_PATH=./data/GeoLite2-City.mmdb

# CORS Configuration
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# WebSocket Configuration
WEBSOCKET_PING_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=25
